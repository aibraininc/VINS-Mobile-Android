<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <solid
                android:color="@color/color_ble_conn_accent"/>

            <stroke
                android:width="2dp"
                android:color="@color/color_ble_conn_border"/>
        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle" >
            <solid
                android:color="@color/color_ble_conn_bg"/>

            <stroke
                android:width="2dp"
                android:color="@color/color_ble_conn_border"/>
        </shape>
    </item>
</selector>